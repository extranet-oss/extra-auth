<script>
function logout() {
  var form = document.getElementById('op.logoutForm');
  var input = document.createElement('input');
  input.type = 'hidden';
  input.name = 'logout';
  input.value = 'yes';
  form.appendChild(input);
  form.submit();
}
</script>
{{{form}}}
<h1>You were signed out</h1>
<p class="text-center">
<button onclick="logout()">Sign out from Extranet</button>
<button class="button-primary" onclick="document.getElementById('op.logoutForm').submit()">Continue</button>
</p>
